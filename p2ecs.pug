input(name="attr_version" type="hidden" value="0.1")
input.current-page(name="attr_current_page" type="hidden" value="1")

.view
    .tabs
        each n in [1, 2, 3, 4]
            label( class="tab tab" + n title="Page " + n )
                input( name="attr_current_page" type="radio" value=n )
                span.label= "Page " + n
    .folio
        .page.page1 
            .content Page 1 Content
        .page.page2 Page 2 Content
        .page.page3 Page 3 Content
        .page.page4 Page 4 Content